{
  "name": "assaultcubejsx",
  "version": "1.0.0",
  "description": "JavaScript cheat for AssaultCube",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "artifactName": "assaultcubejsx-setup-${version}.${ext}",
    "appId": "it.samueleradici.assaultcubejsx",
    "productName": "assaultcubejsx",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/kiologo256x256.ico",
      "publisherName": "kiocode"
    },
    "nsis": {
      "installerIcon": "src/assets/kiologo256x256.ico",
      "uninstallerIcon": "src/assets/kiologo256x256.ico",
      "uninstallDisplayName": "AssaultCubeJSx",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AssaultCubeJSx",
      "perMachine": true,
      "runAfterFinish": true
    }
  },
  "author": "kio",
  "license": "ISC",
  "dependencies": {
    "electron-overlay-window": "^3.3.0",
    "keypress": "^0.2.1",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  }
}
